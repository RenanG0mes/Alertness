<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KSSActivity">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent">

        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:text="1"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button8" android:backgroundTint="@color/cor01"
                    android:onClick="MudarDeTelaIntroPVT1"/>
            <Button
                    android:text="2"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button7" android:backgroundTint="@color/cor02"
                    android:onClick="MudarDeTelaIntroPVT2"/>
            <Button
                    android:text="3"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button6" android:backgroundTint="@color/cor03"
                    android:onClick="MudarDeTelaIntroPVT3"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:text="4"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button11" android:backgroundTint="@color/cor04"
                    android:onClick="MudarDeTelaIntroPVT4"/>
            <Button
                    android:text="5"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button10" android:backgroundTint="@color/cor05"
                    android:onClick="MudarDeTelaIntroPVT5"/>
            <Button
                    android:text="6"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button9" android:backgroundTint="@color/cor06"
                    android:onClick="MudarDeTelaIntroPVT6"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:text="7"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button14" android:backgroundTint="@color/cor07"
                    android:onClick="MudarDeTelaIntroPVT7"/>
            <Button
                    android:text="8"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button13" android:backgroundTint="@color/cor08"
                    android:onClick="MudarDeTelaIntroPVT8"/>
            <Button
                    android:text="9"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button12" android:backgroundTint="@color/cor09"
                    android:onClick="MudarDeTelaIntroPVT9"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:text="Qual seu nível de sonolência?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="125dp" android:layout_marginStart="65dp" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>