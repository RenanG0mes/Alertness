<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem Vindo!"
            android:textSize="18sp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginTop="74dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Identificação:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="91dp"
            android:layout_marginStart="69dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/identificacao"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginStart="4dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Alertness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="92dp" android:layout_marginStart="120dp"/>
    <Button
            android:text="Continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="MudarDeTelacondicao"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/identificacao" android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="@+id/identificacao"/>

</android.support.constraint.ConstraintLayout>