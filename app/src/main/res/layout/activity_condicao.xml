<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CondicaoActivity">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="112dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp">

        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:text="Descanso"
                    android:layout_width="80pt"
                    android:layout_height="80pt" android:id="@+id/button3" android:backgroundTint="@color/cor1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:onClick="MudarDeTelaKSS1"/>
            <Button
                    android:text="Alimentação"
                    android:layout_width="80pt"
                    android:layout_height="80pt" android:id="@+id/button2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:backgroundTint="@color/cor2" android:onClick="MudarDeTelaKSS2"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:text="Trabalho"
                    android:layout_width="80pt"
                    android:layout_height="80pt" android:id="@+id/button5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:backgroundTint="@color/cor3" android:onClick="MudarDeTelaKSS3"/>
            <Button
                    android:text="Lazer"
                    android:layout_width="80pt"
                    android:layout_height="80pt" android:id="@+id/button4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:backgroundTint="@color/cor4" android:onClick="MudarDeTelaKSS4"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:text="Qual situação melhor te descreve no momento?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>